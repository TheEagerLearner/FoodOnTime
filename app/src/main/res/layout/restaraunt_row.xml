<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="6dp"
    app:cardCornerRadius="10dp"

    >
<RelativeLayout
    android:id="@+id/relRow"
    android:layout_width="match_parent"
    android:layout_height="160dp">

<androidx.cardview.widget.CardView
    android:id="@+id/Res"
    android:layout_width="130dp"
    android:layout_height="130dp"
    app:cardCornerRadius="6dp"
    android:elevation="1dp"
    android:layout_margin="8dp"
    android:layout_centerVertical="true"
    >
    <ImageView
        android:id="@+id/imgRes"
        android:layout_width="130dp"
        android:layout_height="130dp"

        android:background="@drawable/ic_deafault"
        android:scaleType="centerCrop"
        />
</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtResName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaraunt_name"
        android:textColor="#000000"
        android:layout_marginLeft="6dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/Res"
        android:layout_centerVertical="true"

        />

    <TextView
        android:id="@+id/txtResCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtResName"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/Res"
        android:text="Cost/person"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtResRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.2"
        android:layout_alignParentBottom="true"
        android:textColor="#ffcd3c"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        />

    <ImageView
        android:id="@+id/imgLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_unlike"
        android:layout_alignParentRight="true"
        android:layout_margin="18dp"
        />


</RelativeLayout>
</androidx.cardview.widget.CardView>